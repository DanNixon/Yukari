{
  "logging": {
    "sinks": [
      {
        "type": "console",
        "level": "trace"
      },
      {
        "type": "file_simple",
        "level": "trace",
        "filename": "logs/test.log"
      }
    ]
  },
  "capture": {
    "output_root_directory": ".",
    "cli": true,
    "cloud": {
      "grabber": "openni2"
    },
    "imu": {
      "grabber": "dummy"
    },
    "triggers": {
      "exit": [
        {
          "type": "signal",
          "signal": 2
        }
      ],
      "capture": [
        {
          "type": "timelapse",
          "seconds": 5
        }
      ]
    }
  }
}
